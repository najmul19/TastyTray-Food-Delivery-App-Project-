<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="#3D2920"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/tasty" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-40dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="30dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Welcome"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/badami"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please login with your information"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:alpha="0.5"
                        android:textColor="@color/badami"
                        />

                    <EditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/backgroundeditview"
                        android:gravity="center"
                        android:hint="username"
                        android:inputType="text"
                        android:padding="10dp"
                        android:shadowColor="@color/facebook"
                        android:textColor= "@color/badami"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/backgroundeditview"
                        android:gravity="center"
                        android:hint="password"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:shadowColor="@color/badami"
                        android:textColor="@color/badami"
                        android:textSize="22sp" />

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/btn10_plan"
                        android:text="Sign In"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view3"
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:background="@color/darkblue"
                            android:alpha="0.7"
                            android:backgroundTint="@color/darkblue" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:text="Or With"
                            android:alpha="0.7"
                            android:textColor="@color/darkblue"
                            android:textColorHint="@color/darkblue" />

                        <View
                            android:id="@+id/view4"
                            android:layout_width="50dp"
                            android:layout_height="2dp"
                            android:background="@color/darkblue"
                            android:alpha="0.7"
                            android:backgroundTint="@color/darkblue" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/fbbackground"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Facebook"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/googlebackground"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Google"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:gravity="center"
                        android:text="Don't have an account? Register"
                        android:textColor="@color/darkblue"
                        android:alpha="0.7"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>